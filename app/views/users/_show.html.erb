<div class="container pt-3 mt-3">
  <h1 class="w-100 text-center pb-3 title-index">
    Mon profil
  </h1>
  <% @users.each do |user| %>
    <div class="col">
      <div class="card-product">
        <h2 class="card-product-infos"><%= user.nickname %></h2>
      </div>
      <div class="card-product">
      <% if current_user == @post.user %>
        <p class="card-product-infos">Les articles que j'ai rédigé : <%= post.title %></p>
      <button type="button" class="btn-gradient">
      <%= link_to "Lire l'article", post_path(post), class: "text-decoration-none text-black" %>
      </button>
      </div>
    </div>
  <% end %>
